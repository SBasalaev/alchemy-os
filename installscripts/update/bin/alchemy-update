#!/bin/sh

echo 'Updating Alchemy OS to 1.4.3'

echo 'Updating core components...'
echo >> /cfg/pkg/db/sources/installed
echo 'res:/pkg  1.4' > /cfg/pkg/sources
pkg refresh
pkg install alchemy-core alchemy-gui libcore-dev libui-dev nec ex
pkg update

#echo Removing deprecated components...

echo 'Adding software sources...'
echo 'http://pkg.alchemy-os.googlecode.com/git  1.4' >> /cfg/pkg/sources
echo 'http://pkg.alchemy-os.googlecode.com/git  1.4-nonfree' >> /cfg/pkg/sources

echo 'appmenu' > /cfg/init

echo 'Updated successfully!'
